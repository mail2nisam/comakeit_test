{% extends 'base.html.twig' %}

{% block body %}
    <h1>Symptoms</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ symptom.id }}</td>
            </tr>
            <tr>
                <th>Conditions</th>
                <td>{{ symptom.conditions }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_symptoms_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_symptoms_edit', { 'id': symptom.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
